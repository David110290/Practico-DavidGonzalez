<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.example.david.practico_davidgonzalez.MainActivity">


    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Titulo"
        android:textColor="#D2EA9A"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnIngrsesar"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:layout_alignEnd="@+id/txtTitulo"
        android:layout_alignLeft="@+id/txtTitulo"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtTitulo"
        android:layout_alignStart="@+id/txtTitulo"
        android:background="#D2EA9A"
        android:text="@string/btnIngresar"
        android:textStyle="italic|bold"
        android:typeface="sans"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="292dp" />

    <EditText
        android:id="@+id/txtPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Pwd"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#FFF"
        android:textSize="27sp"
        android:textColor="#FFF"
        android:layout_above="@+id/btnIngrsesar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Usuario"
        android:textColor="#FFF"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#FFF"
        android:textSize="30sp"
        android:layout_below="@+id/txtTitulo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        app:srcCompat="@drawable/user"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

